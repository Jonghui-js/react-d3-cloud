{
  "name": "react-d3-cloud",
  "version": "0.6.0",
  "description": "a word cloud component using d3-cloud",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint .",
    "build": "NODE_ENV=production npm run build:dev",
    "build:dev": "babel src -d lib --ignore __tests__",
    "testonly": "jest --no-cache",
    "testonly:watch": "npm run testonly -- --watch",
    "test": "npm run lint && npm run testonly",
    "preversion": "npm test",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yoctol/react-d3-cloud.git"
  },
  "keywords": [
    "word-cloud",
    "react",
    "d3"
  ],
  "author": "cph",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Yoctol/react-d3-cloud/issues"
  },
  "homepage": "https://github.com/Yoctol/react-d3-cloud#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "canvas": "^1.6.13",
    "enzyme": "^3.7.0",
    "eslint": "^5.7.0",
    "eslint-config-yoctol": "^0.19.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "7.11.1",
    "eslint-plugin-sort-imports-es6-autofix": "^0.3.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-test-renderer": "^16.6.0"
  },
  "dependencies": {
    "d3-cloud": "^1.2.5",
    "d3-scale": "^1.0.6",
    "d3-selection": "^1.3.2",
    "enzyme-adapter-react-16": "^1.6.0",
    "react-faux-dom": "^4.2.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0"
  },
  "jest": {
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/examples/",
      "/lib/"
    ],
    "timers": "fake",
    "resetModules": true,
    "resetMocks": true
  }
}
